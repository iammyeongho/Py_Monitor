# 환경 설정
ENVIRONMENT=development
DEBUG=true

# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:password@localhost:5432/py_monitor
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=py_monitor
POSTGRES_PORT=5432

# Redis 설정 (선택사항)
REDIS_URL=redis://localhost:6379

# CORS 설정
# 개발 환경에서는 localhost를 허용하고, 운영 환경에서는 실제 도메인을 지정하세요
# 여러 도메인은 쉼표로 구분: http://localhost:3000,http://localhost:8000,https://yourdomain.com
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# 보안 설정
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 이메일 설정
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=True
SMTP_USERNAME=Py Monitor
SMTP_FROM=your_email@gmail.com

# 모니터링 설정
DEFAULT_CHECK_INTERVAL=300
DEFAULT_TIMEOUT=30

# 로깅 설정
LOG_LEVEL=INFO
LOG_DIR=logs
